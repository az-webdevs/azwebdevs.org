<h2>Listing groups</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Description</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for group <- @groups do %>
    <tr>
      <td><%= group.title %></td>
      <td><%= group.url %></td>
      <td><%= group.description %></td>

      <td class="text-right">
        <%= link "Show", to: group_path(@conn, :show, group), class: "button" %>
        <%= link "Edit", to: group_path(@conn, :edit, group), class: "button" %>
        <%= link "Delete", to: group_path(@conn, :delete, group), method: :delete, data: [confirm: "Are you sure?"], class: "button button--danger" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New group", to: group_path(@conn, :new) %>
